					<option value="0">MOD_JGOOGLEADSENSE_SQUARE_CORNERS</option> 
					<option value="6">MOD_JGOOGLEADSENSE_SLIGHTLY_ROUNDED_CORNERS</option> 
					<option value="10">MOD_JGOOGLEADSENSE_VERY_ROUNDED_CORNERS</option>
				</field>
		 		<field name="j_color_border" type="tsgcolor" default="FFFFFF" label="MOD_JGOOGLEADSENSE_BORDER_COLOR" description="MOD_JGOOGLEADSENSE_BORDER_COLOR_IN_HEX"	size="30"/>									
		 		<field name="j_color_link" type="tsgcolor" default="0000FF" label="MOD_JGOOGLEADSENSE_LINK_COLOR" description="MOD_JGOOGLEADSENSE_LINK_COLOR_IN_HEX" size="30"/>	
				<field name="j_color_bg" type="tsgcolor" default="FFFFFF" label="MOD_JGOOGLEADSENSE_BACKGROUND_COLOR" description="MOD_JGOOGLEADSENSE_BACKGROUND_COLOR_IN_HEX" size="30"/>						
