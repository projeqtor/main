				<field name="j_ip_block2" type="text" default="" label="MOD_JGOOGLEADSENSE_IP_BLOCK_2" description="MOD_JGOOGLEADSENSE_ENTER_AN_IP_NUMBER_HERE_THAT_YOU_WISH_TO_BLOCK_GOOGLE_ADS_FROM"/>
