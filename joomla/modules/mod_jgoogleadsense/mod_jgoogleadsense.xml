					<option value="text">MOD_JGOOGLEADSENSE_TEXT_ONLY</option>
					<option value="image">MOD_JGOOGLEADSENSE_IMAGE_ONLY</option>
				</field>					
				<field name="j_ad_uifeatures" type="list" default="0" label="MOD_JGOOGLEADSENSE_CORNER_STYLES" description="MOD_JGOOGLEADSENSE_OPTIONALLY_CHOOSE_FROM_ONE_OF_THE_PRE-DESIGNED_CORNER_STYLES">
