					<option value=""> ----------------- </option>
					<option value="728x15_0ads_al_s">MOD_JGOOGLEADSENSE_728_X_15_ADLINK_5_LINKS</option>
					<option value="468x15_0ads_al_s">MOD_JGOOGLEADSENSE_468_X_15_ADLINK_5_LINKS</option>
					<option value="120x90_0ads_al_s">MOD_JGOOGLEADSENSE_120_X_90_ADLINK_5_LINKS</option>
					<option value="160x90_0ads_al_s">MOD_JGOOGLEADSENSE_160_X_90_ADLINK_5_LINKS</option>
					<option value="180x90_0ads_al_s">MOD_JGOOGLEADSENSE_180_X_90_ADLINK_5_LINKS</option>
					<option value="200x90_0ads_al_s">MOD_JGOOGLEADSENSE_200_X_90_ADLINK_5_LINKS</option>
				</field>					
				<field name="j_ad_type" type="list" default="text_image" label="MOD_JGOOGLEADSENSE_AD_TYPE" description="MOD_JGOOGLEADSENSE_CHOOSE_THE_AD_TYPES_YOU_WOULD_LIKE_TO_DISPLAY_ON_YOUR_PAGE">
