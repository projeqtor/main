				<field name="j_ip_block4" type="text" default="" label="MOD_JGOOGLEADSENSE_IP_BLOCK_4" description="MOD_JGOOGLEADSENSE_ENTER_AN_IP_NUMBER_HERE_THAT_YOU_WISH_TO_BLOCK_GOOGLE_ADS_FROM"/>
				<field name="j_ip_block5" type="text" default="" label="MOD_JGOOGLEADSENSE_IP_BLOCK_5" description="MOD_JGOOGLEADSENSE_ENTER_AN_IP_NUMBER_HERE_THAT_YOU_WISH_TO_BLOCK_GOOGLE_ADS_FROM"/>
				<field name="j_ip_block6" type="text" default="" label="MOD_JGOOGLEADSENSE_IP_BLOCK_6" description="MOD_JGOOGLEADSENSE_ENTER_AN_IP_NUMBER_HERE_THAT_YOU_WISH_TO_BLOCK_GOOGLE_ADS_FROM"/>
				<field name="j_ip_block7" type="text" default="" label="MOD_JGOOGLEADSENSE_IP_BLOCK_7" description="MOD_JGOOGLEADSENSE_ENTER_AN_IP_NUMBER_HERE_THAT_YOU_WISH_TO_BLOCK_GOOGLE_ADS_FROM"/>
				<field name="j_ip_block8" type="text" default="" label="MOD_JGOOGLEADSENSE_IP_BLOCK_8" description="MOD_JGOOGLEADSENSE_ENTER_AN_IP_NUMBER_HERE_THAT_YOU_WISH_TO_BLOCK_GOOGLE_ADS_FROM"/>
				<field name="ip_block_alt_code" type="textarea" default="" cols="35" rows="6" label="MOD_JGOOGLEADSENSE_ALTERNATE_CODE_IF_IP_BLOCKED" description="MOD_JGOOGLEADSENSE_ENTER_ANYTHING"/>
			</fieldset>
		</fields>
	</config>
</extension>