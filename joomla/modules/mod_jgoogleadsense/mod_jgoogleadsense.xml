					<option value="468x60_as">MOD_JGOOGLEADSENSE_468_X_60_BANNER</option> 
					<option value="234x60_as">MOD_JGOOGLEADSENSE_234_X_60_HALF_BANNER</option> 
					<option value=""> ----------------- </option> 
					<option value="120x600_as">MOD_JGOOGLEADSENSE_120_X_600_SKYSCRAPER</option> 
					<option value="160x600_as">MOD_JGOOGLEADSENSE_160_X_600_WIDE_SKYSCRAPER</option> 
					<option value="120x240_as">MOD_JGOOGLEADSENSE_120_X_240_VERTICAL_BANNER</option> 
					<option value=""> ----------------- </option>
					<option value="336x280_as">MOD_JGOOGLEADSENSE_336_X_280_LARGE_RECTANGLE</option>
					<option value="300x250_as">MOD_JGOOGLEADSENSE_300_X_250_MEDIUM_RECTANGLE</option> 
					<option value="250x250_as">MOD_JGOOGLEADSENSE_250_X_250_SQUARE</option> 
					<option value="200x200_as">MOD_JGOOGLEADSENSE_180_X_150_SMALL_RECTANGLE</option>
					<option value="180x150_as">MOD_JGOOGLEADSENSE_180_X_150_SMALL_RECTANGLE</option>
					<option value="125x125_as">MOD_JGOOGLEADSENSE_125_X_125_BUTTON</option>
					<option value=""> ----------------- </option>			
					<option value="728x15_0ads_al">MOD_JGOOGLEADSENSE_728_X_15_ADLINK_4_LINKS</option>
					<option value="468x15_0ads_al">MOD_JGOOGLEADSENSE_468_X_15_ADLINK_4_LINKS</option>
					<option value="120x90_0ads_al">MOD_JGOOGLEADSENSE_120_X_90_ADLINK_4_LINKS</option>
					<option value="160x90_0ads_al">MOD_JGOOGLEADSENSE_160_X_90_ADLINK_4_LINKS</option>
					<option value="180x90_0ads_al">MOD_JGOOGLEADSENSE_180_X_90_ADLINK_4_LINKS</option>
