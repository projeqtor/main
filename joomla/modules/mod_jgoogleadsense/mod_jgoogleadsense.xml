		 		<field name="j_color_url" type="tsgcolor" default="008000" label="MOD_JGOOGLEADSENSE_URL_COLOR" description="MOD_JGOOGLEADSENSE_URL_COLOR_IN_HEX" size="30"/>	
				<field name="j_ad_css" type="text" default="text-align:center;" label="MOD_JGOOGLEADSENSE_DIV_CSS_CODES" description="MOD_JGOOGLEADSENSE_INPUT_ANY_CSS_CODE_THAT_YOU_WANT_HERE"	size="30"/>	
				<field name="j_ad_client" type="text" default="" label="MOD_JGOOGLEADSENSE_PUB-ID" description="MOD_JGOOGLEADSENSE_PUB_DES"	size="30"/>
				<field name="j_ad_channel" type="text" default="" label="MOD_JGOOGLEADSENSE_CHANNEL" description="MOD_JGOOGLEADSENSE_CHANNEL_DES" size="30"/>	
			</fieldset>
			<fieldset name="advanced">
				<field name="j_alternate_ad_url" type="text" default="" label="MOD_JGOOGLEADSENSE_ALTERNATE_AD_URL" description="MOD_JGOOGLEADSENSE_ALTERNATE_AD_URL_TO_SPECIFY_OTHER_ADS_WHEN_NO_ADS_ARE_AVAILABLE" />
				<field name="@spacer" type="spacer" default=" " label=" " description=" " />
