<config>
	<fields name="params">
	<fieldset name="Advanced">
	
			<field label="H4_STYLE" type="spacer" default="H4_STYLE"/>
						<field name="colorStyle" type="list" default="style1" label="Template Syle" description="Color Style">
			<option value="style1">Style1 - Blue</option>
			<option value="style2">Style2 - Green</option>
			<option value="style3">Style3 - Bronze</option>
						</field>

		<field label="STYLE_INFO" type="spacer" default="STYLE_INFO"/>

		<field label="H4_LOGO" type="spacer" default="H4_LOGO"/>
						<field name="logoType" type="list" default="image" label="Logo type" description="Image based (logo.png or Text based logo">
							<option value="image">Image</option>
							<option value="text">Text</option>
						</field>
						<field name="logoText" type="text" default="oxygen" size="50" label="Logo text" description="Logo Text" />
						<field name="sloganText" type="text" default="A JOOMLA51 TEMPLATE" size="50" label="Slogan" description="Slogan Text" />

						<field label="LOGO_INFO" type="spacer" default="LOGO_INFO"/>

		<field label="H4_LAYOUT" type="spacer" default="H4_LAYOUT"/>

						<field name="sidecol_width" type="text" default="190" label="Side Column Width" description="Enter the width of the Side Column in pixels." />

						<field name="col_pos" type="list" default="col_l" label="Side Column Position" description="Side Column Position">
							<option value="col_l"> Left </option>
							<option value="col_r"> Right </option>
						</field>
						
		<field label="H4_BACKGROUND" type="spacer" default="H4_BACKGROUND"/>

						<field name="bg_state" type="list" default="bg_scroll" label="Background Image" description="Background Image">
							<option value="bg_scroll"> Scroll </option>
							<option value="bg_fixed"> Fixed </option>
						</field>

	</fieldset>
	</fields>
